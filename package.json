{
  "name": "silverstripe-charts",
  "version": "4.0.0",
  "description": "Display your data using Chart.js",
  "main": "client/js/dist/main.js",
  "scripts": {
    "test": "mocha",
    "coverage": "istanbul cover --report html _mocha --",
    "build": "browserify client/js/src/main.js | uglifyjs > client/js/dist/main.js",
    "build:watch": "watchify client/js/src/main.js -o client/js/dist/main.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/flashbackzoo/silverstripe-charts.git"
  },
  "keywords": [
    "SilverStripe",
    "Chart.js",
    "Graph"
  ],
  "contributors": [
    {
      "name": "David Craig",
      "email": "david@davidcraig.co.nz"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/flashbackzoo/silverstripe-charts/issues"
  },
  "homepage": "https://github.com/flashbackzoo/silverstripe-charts",
  "devDependencies": {
    "browserify": "^10.2.3",
    "browserify-shim": "^3.8.8",
    "chart.js": "^2.5.0",
    "expect.js": "^0.3.1",
    "istanbul": "^0.3.14",
    "mocha": "^2.2.5",
    "uglify-js": "https://registry.npmjs.org/uglify-js/-/uglify-js-2.8.29.tgz",
    "watchify": "^3.2.2"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "node_modules/jquery/dist/jquery.js": "$",
    "node_modules/chart.js/Chart.js": "Chart"
  }
}
